<h1>Awesome topics to vote on!!!</h1>
<h2>These are some of the topics we want to share</h>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.title.upcase %></td>

        <!--
        <% if topic.description.to_s.start_with?("j") %>
          <td>Starts with J!</td>
        <%else %>
          <td> No J! </td>
          <%end%>
        -->

        <td><%= topic.description %></td>
        <td><%= link_to 'Show', topic %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

